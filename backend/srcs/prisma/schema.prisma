// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  email String @unique

  firstName String?
  lastName String?

  users1 Chat[] @relation("users1")
  users2 Chat[] @relation("users2")

  @@map("users")
}

model Chat {
  id Int @id @default(autoincrement())
  created DateTime @default(now())

  user1_chat_link User @relation("users1",fields:[user1], references: [id])
  user1 Int 
  user2_chat_link User @relation("users2",fields:[user2], references: [id])
  user2 Int

  messages ChatMessage[]
  @@map("chats")
}


model ChatMessage {
  id Int @id @default(autoincrement())

  chatId Int

  createdAt DateTime @default(now())

  message String

  chat_chatmessage_link Chat @relation(fields:[chatId], references: [id])
  

  @@map("chat messages")
}
